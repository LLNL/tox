<?xml version='1.0' encoding='utf-8'?>
<Server port="8005" shutdown="SHUTDOWN" debug="99">
	<Listener className="org.apache.catalina.core.AprLifecycleListener" debug="99" />
	<Listener className="org.apache.catalina.mbeans.ServerLifecycleListener" debug="99" />
	<Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" debug="99" />
	<Listener className="org.apache.catalina.storeconfig.StoreConfigLifecycleListener" debug="99" />
	<GlobalNamingResources>
		<Resource
			name="jdbc/tox"
			scope="Shareable"
			type="javax.sql.DataSource"
			url="jdbc:oracle:thin:@yourDBserver.llnl.gov:1521:yourDBsid"
			driverClassName="oracle.jdbc.pool.OracleDataSource"
			username="tox"
			password="toxbaby"
			maxIdle="3"
			maxActive="10"
			removeAbandoned="true"
			removeAbandonedTimeout="60"
			testOnBorrow="true"
			validationQuery="select * from dual"
			logAbandoned="true"
			debug="99"/>
	</GlobalNamingResources>
	<Service name="Catalina" debug="99">
		<Connector
			acceptCount="100"
			connectionTimeout="20000"
			debug="99"
			disableUploadTimeout="true"
			port="8080"
			redirectPort="8443"
			maxSpareThreads="75"
			maxThreads="150"
			minSpareThreads="25"></Connector>
		<Connector
			debug="99"
			port="8009"
			protocol="AJP/1.3"
			protocolHandlerClassName="org.apache.jk.server.JkCoyoteHandler"
			redirectPort="8443"></Connector>
		<Engine debug="99" defaultHost="localhost" name="Catalina">
			<Host name="localhost" appBase="webapps" debug="99">
				<Valve
					className="org.apache.catalina.valves.AccessLogValve"
					fileDateFormat="yyyy-MM-dd"
					pattern="%h %l %u %t &quot;%r&quot; %s %b &quot;%{Referer}i&quot; &quot;%{User-Agent}i&quot;"
					prefix="localhost_access_log."
					suffix=".txt" />
				<Valve className="org.apache.catalina.authenticator.SingleSignOn" />
			</Host>
			<Realm
				className="org.apache.catalina.realm.JDBCRealm"
				connectionName="app"
				connectionPassword="appbaby"
				connectionURL="jdbc:oracle:thin:@yourDBserver.llnl.gov:1521:yourDBsid"
				debug="99"
				driverName="oracle.jdbc.driver.OracleDriver"
				roleNameCol="role_name"
				userCredCol="user_md5_passwd"
				userNameCol="user_name"
				userRoleTable="user_role_jdbcrealm"
				userTable="user_jdbcrealm" />
		</Engine>
	</Service>
</Server>
